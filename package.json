{
  "name": "tods-competition-factory",
  "author": "Charles Allen <charles@CourtHive.com> (CourtHive.com)",
  "description": "Create and mutate TODS compliant tournament objects",
  "keywords": [
    "TODS",
    "bracket",
    "tournament",
    "advanced scheduling",
    "tournament algorithm",
    "tournament draw generator",
    "tournament manager",
    "game set match",
    "json to csv conversion",
    "round robin",
    "tournaments",
    "competition",
    "tennis score",
    "mock data",
    "matches",
    "seeding",
    "tennis"
  ],
  "version": "0.304.0-beta.2",
  "license": "MIT",
  "private": false,
  "homepage": "https://courthive.github.io/tods-competition-factory/",
  "bugs": {
    "url": "https://github.com/CourtHive/tods-competition-factory/issues",
    "email": "support@CourtHive.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CourtHive/tods-competition-factory"
  },
  "main": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs",
    "./generate": "./dist/forge/generate.mjs",
    "./transform": "./dist/forge/transform.mjs",
    "./query": "./dist/forge/query.mjs",
    "./utilities": "./dist/forge/utilities.mjs"
  },
  "files": [
    "dist"
  ],
  "np": {
    "contents": "."
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "release": "np",
    "start": "rollup --config -w",
    "build": "rimraf dist && rollup --config",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint src",
    "prepare": "rimraf dist && rollup --config",
    "prepublishOnly": "./addVersion $npm_package_version && pinst --disable",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "doc:publish": "cd documentation && GIT_USER=CourtHive USE_SSH=true yarn deploy",
    "generate-types": "quicktype -s schema src/global/schema/tournament.schema.json -o src/types/tournamentFromSchema.ts --just-types -t Tournament",
    "check-types": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn eslint src"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@rollup/plugin-json": "4.1.0",
    "@types/node": "16.11.49",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "ajv": "8.11.0",
    "ajv-formats": "2.1.1",
    "c8": "7.12.0",
    "esbuild": "^0.15.5",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.4.2",
    "eslint-module-utils": "2.7.4",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.30.1",
    "esm": "3.2.25",
    "fs-extra": "10.1.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "np": "7.6.2",
    "pinst": "3.0.0",
    "prettier": "2.7.1",
    "prettier-eslint": "15.0.1",
    "quicktype": "15.0.261",
    "rimraf": "3.0.2",
    "rollup": "2.78.0",
    "rollup-plugin-dts": "4.2.2",
    "rollup-plugin-esbuild": "^4.9.3",
    "source-map-resolve": "0.6.0",
    "tslib": "2.4.0",
    "typescript": "4.7.4",
    "vite": "3.0.8",
    "vitest": "0.22.1"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint",
    "*": "prettier --ignore-unknown --write"
  },
  "browserslist": [
    "defaults and supports es6-module",
    "maintained node versions"
  ]
}
